<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_off_white"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_top"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_marginStart="15dp"
            android:fontFamily="@font/lobster_two_bold"
            android:text="QuikVentory"
            android:textColor="@color/design_default_color_on_primary"
            android:textSize="35sp"
            app:layout_constraintBottom_toBottomOf="@id/layoutTop"
            app:layout_constraintStart_toStartOf="@id/layoutTop"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_search_top"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/layoutTop"
            app:tint="#edda26"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutTotals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/totals_grad"
        android:padding="25dp"
        app:layout_constraintTop_toBottomOf="@id/layoutTop">

        <ImageView
            android:id="@+id/totalsBackgroundImage"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/home_tile"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/homeHeaderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Statistics"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#202020"
            android:paddingBottom="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/itemCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Count: 57"
            android:layout_marginStart="25dp"
            app:layout_constraintTop_toBottomOf="@id/homeHeaderText"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/totalAssetText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Assets: $4,086.46"
            android:layout_marginEnd="25dp"
            app:layout_constraintTop_toBottomOf="@id/homeHeaderText"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/lastScanText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Scan: 2/5/2021"
            android:layout_marginStart="25dp"
            app:layout_constraintTop_toBottomOf="@id/itemCountText"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/employeeCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employees: 4"
            android:layout_marginEnd="25dp"
            app:layout_constraintTop_toBottomOf="@id/totalAssetText"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/navDivider"
        app:layout_constraintTop_toBottomOf="@id/layoutTotals">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layoutInventoryTile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/home_tile"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintEnd_toStartOf="@id/layoutReportsTile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:src="@drawable/ic_inventory"
                    app:tint="@color/teal_700" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inventory"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutReportsTile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/home_tile"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/layoutInventoryTile"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:src="@drawable/ic_reports"
                    app:tint="@color/teal_700" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reports"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutAssetsTile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/home_tile"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintEnd_toStartOf="@id/layoutCommitTile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutInventoryTile">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:src="@drawable/ic_assets"
                    app:tint="@color/teal_700" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Assets"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutCommitTile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/home_tile"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/layoutAssetsTile"
                app:layout_constraintTop_toBottomOf="@id/layoutReportsTile">

                <ImageView
                    android:id="@+id/inventoryImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:src="@drawable/ic_check"
                    app:tint="@color/teal_700" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update"
                    android:layout_marginBottom="10dp"/>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:itemIconSize="30dp"
        app:labelVisibilityMode="unlabeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/navigation_menu" />

    <View
        android:id="@+id/navDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0F0F0"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView" />

</androidx.constraintlayout.widget.ConstraintLayout>